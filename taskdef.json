{
    "containerDefinitions": [ 
       { 
          "essential": true,
          "image": "997477333591.dkr.ecr.us-east-1.amazonaws.com/frontend",
          "logConfiguration": { 
             "logDriver": "awslogs",
             "options": { 
                "awslogs-group" : "/ecs/fargate-task-definition",
                "awslogs-region": "us-east-1",
                "awslogs-stream-prefix": "ecs"
             }
          },
          "name": "frontend",
          "portMappings": [ 
             { 
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp"
             }
          ]
       },
       { 
          "essential": true,
          "image": "997477333591.dkr.ecr.us-east-1.amazonaws.com/backend",
          "logConfiguration": { 
             "logDriver": "awslogs",
             "options": { 
                "awslogs-group" : "/ecs/fargate-task-definition",
                "awslogs-region": "us-east-1",
                "awslogs-stream-prefix": "ecs"
             }
          },
          "name": "backend",
          "portMappings": [ 
             { 
                "containerPort": 5000,
                "hostPort": 5000,
                "protocol": "tcp"
             }
          ]
       }
    ],
    "cpu": "256",
    "executionRoleArn": "arn:aws:iam::997477333591:role/ecsTaskExecutionRole",
    "family": "ecs-two-cont",
    "memory": "512",
    "networkMode": "awsvpc",
    "runtimePlatform": {
         "operatingSystemFamily": "LINUX"
     },
    "requiresCompatibilities": [ 
        "FARGATE" 
     ]
 }